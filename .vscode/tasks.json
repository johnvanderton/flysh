{	
	"todos": "Add add paths '//PATH//..' into variable,...",
	"version": "2.0.0",
	"options": {
		"env": {
		  "node_env": "dev",
		}
	 },
	"tasks": [
		{
			"label": "clean",
			"type": "shell",
			"command": "rimraf",
			"args": [
				"${workspaceRoot}/dist/*"
			],
			"windows": {
				"command": "rimraf",
				"args": [
					"${workspaceRoot}\\dist\\*"
				],
			},
			"group": "build"
		},
		{
			"label": "build_esm",
			"type": "typescript",
			"tsconfig": "tsconfig.esm.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build_cjs",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build_types",
			"type": "typescript",
			"tsconfig": "tsconfig.types.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "watch",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build"
		},
		{
			"label": "execute",
			"type": "shell",
			"command": "node",
			"args": [
				"${workspaceRoot}/dist/cjs/example/index.js"
			],
			"windows": {
				"command": "node",
				"args": [
					"${workspaceRoot}\\dist\\cjs\\example\\index.js"
				],
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "tests",
			"type": "shell",
			"command": "mocha",
			"args": [
				"-r",
				"ts-node/register",
				"test/**/*.test.ts",
				"test/**/**/*.test.ts",
				"test/src/**/*.test.ts"
			],
			"windows": {
				"command": "mocha",
				"args": [
					"-r",
					"ts-node/register",
					"test/**/*.test.ts"
				],
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			},
			"group": "test"
		},
		{
			"label": "start",
			"dependsOrder": "sequence",
			"dependsOn": ["clean","build_cjs","build_types","build_esm","execute"],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}