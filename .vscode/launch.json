{
    "version": "0.1",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "env":{
                "NODE_ENV":"dev",
                "PORT":"8080",
                "CUSTOM_PARAMS":"flysh"
            }
        }
    ]
}